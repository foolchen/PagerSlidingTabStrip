<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="pstsStyle">@style/CustomStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_launcher_actionbar</item>
        <item name="android:background">#FF666666</item>
        <item name="pstsStyle">@style/CustomStyle</item>
    </style>

    <style name="Widget" />

    <style name="CustomStyle" parent="Widget">
        <item name="pstsIndicatorColor">@android:color/holo_red_light</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsIndicatorHeight">3dp</item>
        <item name="pstsTextSize">16dp</item>
        <item name="pstsTextColor">@color/tab_text_color_selector</item>
        <item name="pstsTextBold">false</item>
        <item name="pstsUnderlineHeight">0dp</item>
        <item name="pstsTabPaddingLeftRight">10dp</item>
    </style>

</resources>